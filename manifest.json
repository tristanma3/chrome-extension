{
  "manifest_version": 3,
  "name": "Background Timetracker",
  "version": "1.0.0",
  "description": "Keeps track of website time usage.",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "tabs", "activeTab", "storage"]
}
